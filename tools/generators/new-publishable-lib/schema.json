{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "new-publishable-lib",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the library?"
    }
  },
  "required": ["name"],
  "additionalProperties": true
}
